<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vehicles.AddEditVehicleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Make -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_make"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/vehicle_make">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="100" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Model -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_model"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/vehicle_model">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="100" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- License plate -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_license_plate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/license_plate"
            app:helperText="@string/license_plate_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_license_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLength="15" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fuel type -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_fuel_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/fuel_type">

            <AutoCompleteTextView
                android:id="@+id/spinner_fuel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Primary vehicle switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/primary_vehicle"
            android:textSize="16sp" />

        <!-- Audit protection switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_audit_protected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/audit_protection"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_audit_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/audit_protection_hint"
            android:textColor="?android:attr/textColorHint"
            android:textSize="12sp" />

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_notes"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/notes">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Save button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />

        <!-- Delete button (only visible when editing existing vehicle) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/delete_vehicle_title"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            app:icon="@drawable/ic_delete"
            app:iconTint="@android:color/holo_red_dark"
            app:strokeColor="@android:color/holo_red_dark" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progress_saving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/cd_saving"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
