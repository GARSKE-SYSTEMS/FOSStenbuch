<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vehicles.AddEditVehicleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Make -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_make"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/vehicle_make">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="100" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Model -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_model"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/vehicle_model">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="100" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- License plate -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_license_plate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/license_plate"
            app:helperText="@string/license_plate_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_license_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLength="15" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fuel type -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_fuel_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/fuel_type">

            <AutoCompleteTextView
                android:id="@+id/spinner_fuel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Primary vehicle switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/primary_vehicle"
            android:textSize="16sp" />

        <!-- Audit protection switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_audit_protected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/audit_protection"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_audit_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/audit_protection_hint"
            android:textColor="?android:attr/textColorHint"
            android:textSize="12sp" />

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_notes"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/notes">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Automatic Bluetooth Tracking -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/bluetooth_tracking_section"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/bluetooth_tracking_hint"
            android:textColor="?android:attr/textColorHint"
            android:textSize="12sp" />

        <!-- Selected device display -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_selected_bt_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_bt_device_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="BMW Infotainment" />

                    <TextView
                        android:id="@+id/text_bt_device_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"
                        tools:text="AA:BB:CC:DD:EE:FF" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_remove_bt_device"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bluetooth_remove"
                    android:textColor="?attr/colorError" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_pick_bt_device"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/bluetooth_pick_device" />

        <!-- Save button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progress_saving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/cd_saving"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
