<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Date / start time -->
        <TextView
            android:id="@+id/text_ghost_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp"
            tools:text="28.02.2026 08:34" />

        <!-- Route -->
        <TextView
            android:id="@+id/text_ghost_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Musterstraße 1, Berlin → Hauptbahnhof, München" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <!-- GPS distance -->
            <TextView
                android:id="@+id/text_ghost_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                tools:text="GPS: 584,3 km" />

            <!-- End time -->
            <TextView
                android:id="@+id/text_ghost_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                tools:text="bis 18:00" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
